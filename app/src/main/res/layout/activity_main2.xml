<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Main2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Train Number: "
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:id="@+id/tvnum"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvnum"
        android:textSize="20sp"
        android:id="@+id/etnum"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvnum"
        android:text="Enter Station Code : "
        android:textSize="20sp"
        android:layout_marginTop="25sp"
        android:id="@+id/tvcd"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etnum"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/tvcd"
        android:layout_marginTop="5sp"
        android:id="@+id/etcd"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvcd"
        android:layout_marginRight="30sp"
        android:layout_toLeftOf="@+id/chdt"
        android:layout_marginTop="25sp"
        android:id="@+id/etdate"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etcd"
        android:text="Change Date"
        android:layout_alignParentRight="true"
        android:id="@+id/chdt"
        android:layout_marginTop="10sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etdate"
        android:text="Check Status"
        android:layout_marginTop="15sp"
        android:id="@+id/check_status" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/check_status"
        android:layout_marginTop="15sp"
        android:id="@+id/position"/>



</RelativeLayout>